{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "es2017",
    "outDir": "./dist",
    "baseUrl": "./src",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  }
}
